---
import HeaderBtn from '../components/HeaderBtn.astro'
import {Counter} from '../components/Counter'
---

<header transition:persist class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6">
  <div class="mx-auto text-center mb-8 lg:mb-16">
    <h2 class="mb-4 text-5xl tracking-tight font-extrabold text-white">

      Space Launches
    </h2>
    <p class="font-ligth text-gray-500 sm:text-xl dark:text-gray-400">
      All the information about Space Launches
    </p>
  </div>
  <Counter client:visible/>
  <nav class="flex flex-col items-center justify-between w-full text-center md:flex-row">
    <HeaderBtn class="text-white" href="/" >
      <svg slot='before' width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M10 6a3 3 0 1 0 -6 0v7h6v-7z" />
        <path d="M14 13h6v-7a3 3 0 0 0 -6 0v7z" />
        <path d="M5 16c0 2.333 .667 4 2 5c1.333 -1 2 -2.667 2 -5" />
        <path d="M15 16c0 2.333 .667 4 2 5c1.333 -1 2 -2.667 2 -5" />
        <path d="M10 8h4" />
        <path d="M10 11h4" />
      </svg>
      Ultimos lanzamientos</HeaderBtn>
    <HeaderBtn class="text-white" href="/about" >
      <svg slot='before' width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
        <path d="M12 9h.01" />
        <path d="M11 12h1v4h1" />
      </svg>
      Sobre el proyecto</HeaderBtn>
    <HeaderBtn class="text-white" href="/oldest" >
      <svg slot="before" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M3 3m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z" />
        <path d="M9 15v2" />
        <path d="M12 11v6" />
        <path d="M15 13v4" />
      </svg>
      Lo mas viejo</HeaderBtn>
  </nav>
</header>




